<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/browse_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"></android.support.v7.widget.RecyclerView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/browse_recyclerView">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/browse_recyclerView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Education"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/education_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Education"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black_overlay" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/education_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_view"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/browse_recyclerView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="tours and travels"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/tours_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Education"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black_overlay" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tours_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_view"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/browse_recyclerView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Hotels"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/hotel_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Education"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black_overlay" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hotel_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_view"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"></android.support.v7.widget.RecyclerView>


                <TextView
                    android:id="@+id/plumbing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/browse_recyclerView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Plumbing"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/plumbing_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Education"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black_overlay" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plumbing_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_view"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>